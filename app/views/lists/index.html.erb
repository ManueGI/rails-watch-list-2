    <h3><%= list.name %></h1>

     <%= link_to "X", list_path(list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Es-tu sÃ»r(e) de vouloir supprimer cette liste ?" } %>

    </div>
    <% end %>

<% end %>

